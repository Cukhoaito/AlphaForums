@model AlphaForums.Models.PostViewModels.PostRelyModel 

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading text-bold">
            Reply | @Model.PostTitle
        </div>
        <div class="flex mb-2 p-0">
            <div class="forumLogo"
                 style="background-image: url(@Model.ForumImageUrl)">
            </div>
            <span id="headingBtn">
                <a asp-controller="Post" asp-action="Index"
                   asp-route-id="@Model.PostId" class="btn btn-back">
                    Back to Post
                </a>
            </span>
        </div>

    </div>
    <div class="row">
        <div id="postReply">
            <p  class="m-0">
                @Model.PostContent
            </p>
        </div>
    </div>

    <div class="row">
        <div id="createReply" class="p-0">
            <form asp-action="AddReply" method="post" id="addPostForm">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="replyLabel" asp-for="ReplyContent">Reply </label>
                    <textarea asp-for="ReplyContent" 
                    rows="20" class="border rounded-0 textareaInput" placeholder="Your reply..."></textarea>
                    <span asp-validation-for="ReplyContent" class="text-danger"></span>
                </div>
                <button type="submit"
                        id="submitReplyBtn"
                        class="btn btn-submitPost">
                    Submit Reply
                </button>
                <input asp-for="AuthorId" type="hidden"/>
                <input asp-for="PostId" type="hidden"/>
                <input asp-for="ForumId" type="hidden"/>

            </form>
        </div>
    </div>
</div>