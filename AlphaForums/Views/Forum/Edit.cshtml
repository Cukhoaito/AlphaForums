@model AlphaForums.Models.ForumViewModels.UpdateForumViewModel

<div class="container body-content forumTitle">
    <div class="row sectionHeader text-bold">
        <div class="sectionHeading">
            Edit Forum
        </div>
    </div>
    <div class="row">
        <div id="createForumSection">
            <form asp-action="EditForum" method="post" id="createForumForm" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title">Forum Title</label>
                    <input asp-for="Title" value="@Model.Title" class="form-control" placeholder="Choose forum title"/>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Description">Forum Description</label>
                    <input asp-for="Description" value="@Model.Description" class="form-control" placeholder="Write e brief description of the topic"/>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <input asp-for="Id" type="hidden"/>
                
                <button type="submit" id="newFormBtn" class="btn btn-submitPost m-0 mt-4 mb-2">Save Forum</button>
                <a class="btn btn-delete m-0 mt-4 mb-2" asp-controller="Forum" asp-action="Index">Close</a>
                
            </form>
        </div>
    </div>
</div>