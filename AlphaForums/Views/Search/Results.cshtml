@model AlphaForums.Models.SearchViewModels.SearchResultModel

<div class="container body-content">
    <div class="row sectionHeader">
        <span>Search Results for: @Model.SearchQuery</span>
        <div class="sectionHeading">

            <form asp-controller="Search" asp-action="Search" method="POST">
                <div class="searchForm">
                    <input name="query" type="text"
                           placeholder="Search..." class="searchBar"
                           value="@Model.SearchQuery"/>
                    <button type="submit" class="btn btn-search">
                        <i class="material-icons">search</i>
                    </button>
                </div>
            </form>
        </div>

    </div>
    <div class="row forumIndexContent">
        @if (Model.Posts.Any())
        {
            <table class="table table-hover table-bordered" id="forumIndexTable">
                <tbody>
                @foreach (var post in Model.Posts)
                {
                    <tr>
                        <td>
                            <a asp-controller="Forum" asp-action="Topic" asp-route-id="@post.Forum.Id">
                                <div class="forumLogo" style="background-image: url('@post.Forum.ImageUrl')"></div>
                            </a>
                            <div class="postData">
                                <div class="postTitle">
                                    <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">@post.Title</a>
                                </div>
                                <div class="postSubTitle">
                                    <div>
                                        <span class="postAuthor">
                                            <a asp-controller="Profile" asp-action="Detail" asp-route-id="@post.AuthorId">
                                                @post.AuthorName
                                            </a>
                                            (@post.AuthorRating)
                                        </span>

                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="forumPostCount">
                                Replies: @post.RepliesCount
                            </div>
                        </td>
                        <td>
                            <div class="postDate">@post.DatePosted</div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        }
        else
        {
            <div class="noPosts text-center">
                <i class="material-icons md-72">question_answer</i>
            </div>
            <h5>
                No search results found for @Model.SearchQuery <br/>
            </h5>
        }
    </div>
</div>
