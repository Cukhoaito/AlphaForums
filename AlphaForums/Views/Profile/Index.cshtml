@model AlphaForums.Models.ProfileViewModels.ProfileListingModel

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading text-bold">Browser Users</div>
    </div>
    <div class="row" id="forumIndexContent">
        <table class="table table-hover" id="userIndexTable">
            <thead>
            <tr>
                <th>Image</th>
                <th>Username</th>
                <th>Member since</th>
                <th>Rating</th>
            </tr>
            </thead>
            <tbody>
                @foreach (var profile in Model.Profiles)
                {
                    <tr class="userRow">
                        <td>
                            <div class="userProfilePic" 
                                 style="background-image: url(@profile.ProfileImageUrl)"></div>
                        </td>
                        <td>@profile.UserName</td>
                        <td>@profile.MemberSince</td>
                        <td>@profile.UserRating</td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>